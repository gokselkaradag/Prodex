@model UserModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Ayarlar Sayfası</h1>
<form method="post">
    @Html.Label("Adınız")
    <input type="text" asp-for="Name" class="form-control" />
    <br />

    @Html.Label("Soyadınız")
    <input type="text" asp-for="SurName" class="form-control" />
    <br />

    @Html.Label("E-posta")
    <input type="email" asp-for="Mail" class="form-control" />
    <br />

    @Html.Label("Şifre")
    <input type="email" asp-for="Password" class="form-control" />
    <br />

    @Html.Label("Şifre Tekrar")
    <input type="email" asp-for="ConfirmPassword" class="form-control" />
    <br />

    <button class="btn btn-warning">Değişiklikleri Kaydet</button>
</form>

